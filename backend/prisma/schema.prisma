datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       String    @id @default(uuid())
  email    String    @unique
  password String
  products Product[]
}

model Product {
  id          String   @id @default(uuid())
  title       String
  description String
  imageUrl    String
  price       Float
  category    String
  status      String
  createdAt   DateTime @default(now())
  user        User     @relation(fields: [userId], references: [id])
  userId      String
}
